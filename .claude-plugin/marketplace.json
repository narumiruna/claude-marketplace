{
  "name": "narumi-marketplace",
  "owner": {
    "name": "narumi"
  },
  "metadata": {
    "description": "Narumi's plugin marketplace for development tools",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "name": "python-code-quality",
      "source": "./plugins/python-code-quality",
      "description": "Python code quality hooks: auto-format with ruff, lint with ruff check, and type check with ty",
      "version": "1.0.0",
      "keywords": ["python", "ruff", "type-checking", "formatting", "linting"],
      "hooks": {
        "PreToolUse": [
          {
            "matcher": "Edit|Write",
            "hooks": [
              {
                "type": "command",
                "command": "uv run ruff format"
              },
              {
                "type": "command",
                "command": "uv run ruff check --fix"
              },
              {
                "type": "command",
                "command": "uv run ty check"
              }
            ]
          }
        ]
      },
      "strict": false
    },
    {
      "name": "python-peewee",
      "source": "./",
      "description": "Patterns for using Peewee ORM with DatabaseProxy and scoped connections/transactions",
      "version": "1.0.0",
      "keywords": ["python", "peewee", "orm", "database", "sql"],
      "skills": ["./skills/python-peewee"],
      "strict": false
    }
  ]
}
